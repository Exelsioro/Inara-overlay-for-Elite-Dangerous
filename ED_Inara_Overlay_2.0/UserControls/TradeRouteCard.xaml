<UserControl x:Class="ED_Inara_Overlay_2._0.UserControls.TradeRouteCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             HorizontalAlignment="Stretch">

    <!-- Main container with Elite Dangerous inspired styling -->
    <Border x:Name="MainBorder" 
            Background="#AA1A1A1A"
            BorderBrush="#FF404040"
            BorderThickness="2"
            CornerRadius="0"
            HorizontalAlignment="Stretch"
            Padding="0"
            Effect="{DynamicResource CardShadowEffect}">

        <!-- Inner highlight border -->
        <Border BorderBrush="#FF606060" 
                BorderThickness="1" 
                CornerRadius="0" 
                Margin="2">

            <!-- Content area -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header strip -->
                <Border Grid.Row="0" 
                        Background="#882D2D2D"
                        BorderBrush="#FF505050"
                        BorderThickness="0,0,0,1"
                        Padding="8,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Route type indicator -->
                        <TextBlock x:Name="RouteTypeLabel" 
                                 Grid.Column="0"
                                 Text="TRADE ROUTE"
                                 Foreground="{DynamicResource PrimaryTextBrush}" 
                                 FontSize="10"
                                 FontWeight="Bold"
                                 FontFamily="Segoe UI"
                                 VerticalAlignment="Center"/>

                        <!-- Distance indicator -->
                        <StackPanel Grid.Column="1" 
                                  Orientation="Horizontal" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0">
                            <TextBlock Text="📍" 
                                     Foreground="{DynamicResource AccentBrush}" 
                                     FontSize="10" 
                                     Margin="0,0,4,0"/>
                            <TextBlock x:Name="DistanceLabel" 
                                     Text="0.0 LY"
                                     Foreground="{DynamicResource AccentBrush}" 
                                     FontSize="10"
                                     FontFamily="Segoe UI"
                                     VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Pin Route Button -->
                        <Button x:Name="PinRouteButton"
                              Grid.Column="1"
                              Content="📌 PIN"
                              Foreground="{DynamicResource AccentBrush}" 
                              Background="Transparent"
                              BorderBrush="{DynamicResource AccentBrush}"
                              BorderThickness="1"
                              FontSize="9"
                              FontWeight="Bold"
                              FontFamily="Segoe UI"
                              Padding="6,2"
                              VerticalAlignment="Bottom"
                              Cursor="Hand"
                              Click="PinRouteButton_Click" Grid.ColumnSpan="2" Margin="51,0,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="2">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF00B4FF"/>
                                            <Setter Property="Foreground" Value="#FF000000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Main content -->
                <StackPanel x:Name="ContentStackPanel"
                           Grid.Row="1"
                           Orientation="Vertical"
                           HorizontalAlignment="Stretch"
                           Margin="8">

                    <!-- Dynamic content will be populated via code-behind -->

                </StackPanel>

                <!-- Footer strip -->
                <Border Grid.Row="2" 
                        Background="#882D2D2D"
                        BorderBrush="#FF505050"
                        BorderThickness="0,1,0,0"
                        Padding="8,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Last update info -->
                        <TextBlock x:Name="LastUpdateLabel" 
                                 Grid.Column="0"
                                 Text="Last updated: --"
                                 Foreground="#FF808080"
                                 FontSize="9"
                                 FontFamily="Segoe UI"
                                 VerticalAlignment="Center"/>

                        <!-- Total profit -->
                        <TextBlock x:Name="TotalProfitLabel" 
                                 Grid.Column="1"
                                 Text="0 CR"
                                 Foreground="{DynamicResource SuccessBrush}" 
                                 FontSize="12"
                                 FontWeight="Bold"
                                 FontFamily="Segoe UI"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Border>

</UserControl>

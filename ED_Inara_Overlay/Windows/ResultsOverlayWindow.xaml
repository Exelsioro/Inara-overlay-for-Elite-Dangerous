<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ED_Inara_Overlay.Windows.ResultsOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ED_Inara_Overlay.Windows"
        mc:Ignorable="d"
        Title="Trade Route Results" 
        Height="500" Width="800"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="CanResize">
    
    <!-- Resource Dictionary for common styles -->

    
    <!-- Main container with dark background and transparency -->
    <Border Style="{StaticResource WindowBorderStyle}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <TextBlock x:Name="TitleLabel" 
                          Text="Trade Route Results" 
                          Style="{StaticResource HeaderTextStyle}"
                          HorizontalAlignment="Left"/>
                <Button x:Name="CloseButton" 
                       Content="âœ•" 
                       Width="30" Height="30"
                       HorizontalAlignment="Right"
                       Background="#FFCC4444" 
                       Foreground="White"
                       BorderThickness="0"
                       FontWeight="Bold"
                       Click="CloseButton_Click"/>
            </Grid>

            <!-- Results Container -->
            <Border Grid.Row="1" 
                   Background="#33000000" 
                   BorderBrush="#FF404040" 
                   BorderThickness="1" 
                   CornerRadius="3">
                <ScrollViewer x:Name="ResultsScrollViewer" 
                             Style="{DynamicResource CustomScrollViewerStyle}"
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             Background="Transparent">
                    <StackPanel x:Name="ResultsPanel" 
                               Orientation="Vertical" 
                               Margin="10,10,10,50"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>

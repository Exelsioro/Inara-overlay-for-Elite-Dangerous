<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ED_Inara_Overlay.Windows.ResultsOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ED_Inara_Overlay.Windows"
        mc:Ignorable="d"
        Title="Trade Route Results" 
        Height="500" Width="800"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="CanResize">
    
    <!-- Resource Dictionary for common styles -->

    
    <!-- Main container with dark background and transparency -->
    <Border Style="{StaticResource WindowBorderStyle}" Padding="6,4,6,6">
        <Grid Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,4" Height="24">
                <TextBlock x:Name="TitleLabel" 
                          Text="Trade Route Results" 
                          Style="{StaticResource HeaderTextStyle}"
                          FontSize="14"
                          Margin="0"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"/>
                <Button x:Name="CloseButton" 
                       Content="x" 
                       Width="24" Height="24"
                       HorizontalAlignment="Right"
                       Background="{DynamicResource ButtonBackgroundColorBrush}" 
                       Foreground="{DynamicResource AccentColorBrush}"
                       BorderBrush="{DynamicResource BorderColorBrush}" BorderThickness="1"
                       FontWeight="Bold"
                       Click="CloseButton_Click"/>
            </Grid>

            <!-- Results Container -->
            <Border Grid.Row="1" 
                   Background="{DynamicResource SecondaryBackgroundColorBrush}" 
                   BorderBrush="{DynamicResource BorderColorBrush}" 
                   BorderThickness="1" 
                   CornerRadius="0">
                <ScrollViewer x:Name="ResultsScrollViewer" 
                             Style="{DynamicResource CustomScrollViewerStyle}"
                             VerticalScrollBarVisibility="Auto" 
                             HorizontalScrollBarVisibility="Disabled"
                             Background="#550B0400">
                    <StackPanel x:Name="ResultsPanel" 
                               Orientation="Vertical" 
                               Margin="8,6,8,40"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>


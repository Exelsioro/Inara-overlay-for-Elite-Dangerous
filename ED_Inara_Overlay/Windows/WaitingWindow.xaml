<Window x:Class="ED_Inara_Overlay.Windows.WaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ED Inara Overlay - Waiting for Target Application"
        Height="469" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="#1A1A1A"
        Foreground="White">

    <Grid Margin="20,20,20,42">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="43.94"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="25.1"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20" Width="226">
            <Ellipse Width="16" Height="16" Fill="#00B4FF" Margin="0,0,10,0"/>
            <TextBlock Text="ED INARA OVERLAY" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#00B4FF"/>
        </StackPanel>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="426" Height="246">
            <!-- Animated Loading Spinner -->
            <Grid Width="48" Height="48" Margin="0,0,0,20">
                <!-- Background Circle -->
                <Ellipse Width="44" Height="44" 
                         Stroke="#404040" 
                         StrokeThickness="3" 
                         Fill="Transparent"/>

                <!-- Animated Arc -->
                <Ellipse Width="44" Height="44" 
                         Stroke="#00B4FF" 
                         StrokeThickness="3" 
                         Fill="Transparent"
                         StrokeDashArray="31.4 31.4"
                         StrokeDashOffset="0"
                         StrokeStartLineCap="Round"
                         StrokeEndLineCap="Round"
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotation"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                   Storyboard.TargetProperty="Angle"
                                                   From="0" To="360" Duration="0:0:1.5"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <!-- Center Icon -->
                <Ellipse Width="12" Height="12" 
                         Fill="#00B4FF" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"/>
            </Grid>

            <!-- Status Text -->
            <TextBlock x:Name="StatusText" 
                       Text="Welcome, Commander..." 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"
                       Foreground="White"/>

            <!-- Target Process Name -->
            <!--<TextBlock x:Name="TargetProcessText" 
                       Text="Looking for: notepad.exe" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"
                       Foreground="#B0B0B0"/>-->
            <Border Background="#2A2A2A" 
                    BorderBrush="#404040" 
                    BorderThickness="1" 
                    CornerRadius="4" 
                    Padding="5"
                    Width="378" Height="141">
                <StackPanel>
                    <TextBlock Text="Instructions:" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Foreground="#00B4FF" 
                               Margin="0,0,0,8"/>

                    <TextBlock x:Name="InstructionsText" 
                               TextWrapping="Wrap" 
                               FontSize="12" 
                               Foreground="#D0D0D0" 
                               LineHeight="16" Height="100">
                        <Run Text="1. Click "/><Run x:Name="TargetAppName" Text="Start Overlay" Foreground="#00FF00"/><Run Text=" button to begin monitoring"/><LineBreak/>
                        <Run Text="2. The overlay will attach to Elite Dangerous when detected"/><LineBreak/>
                        <Run Text="3. Change themes using the "/><Run x:Name="Settings" Text="Settings" Foreground="#0078D7"/><Run Text=" button"/><LineBreak/>
                        <Run Text="4. Close this window to exit the overlay application"/><LineBreak/>
                        <LineBreak/>
                        <Run Text="You can use Ctrl+5 to open trade routes search pannel in game"/><LineBreak/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Instructions -->
        </StackPanel>

        <!-- Ko-fi Support Link - Centered in middle of screen -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="19" Width="286">
            <TextBlock Text="ðŸ’– Support the developer: " 
                       FontSize="14" 
                       Foreground="#D0D0D0" 
                       VerticalAlignment="Center" 
                       Margin="0,0,5,0"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center">
                    <Hyperlink x:Name="KofiLink" 
                               NavigateUri="https://ko-fi.com/exelsior" 
                               RequestNavigate="KofiLink_RequestNavigate" 
                               Foreground="#FF5E5E" 
                               TextDecorations="None">
                        <Run Text="Ko-fi.com/exelsior" FontSize="14"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Button Panel -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Width="400">
            <!-- Settings Button -->
            <Button x:Name="SettingsButton"
                    Content="Settings"
                    Width="120"
                    Height="32"
                    Background="#0078D7"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="0,0,10,0"
                    Click="SettingsButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" 
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#106EBE"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#005A9E"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Start Overlay Button -->
            <Button x:Name="StartOverlayButton"
                    Content="Start Overlay"
                    Width="120"
                    Height="32"
                    Background="#00AA00"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="12"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="10,0,10,0"
                    Click="StartOverlayButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" 
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00CC00"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#008800"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Close Button -->
            <Button x:Name="CloseButton"
                    Content="Exit Overlay" 
                    Width="120" 
                    Height="32"
                    Background="#FF4444" 
                    Foreground="White" 
                    BorderThickness="0" 
                    FontSize="12"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Margin="10,0,0,0"
                    Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="4" 
                                            BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF6666"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#CC3333"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="OverlayTestHarness.TestHarnessMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay Test Harness" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#2C2C2C">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Overlay Bug Reproduction Test Harness" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Controls Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="CreateMockWindowButton" 
                    Content="Create Mock Target Window" 
                    Click="CreateMockWindowButton_Click"
                    Padding="10,5" 
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderBrush="Transparent"/>
            
            <Button Name="StartOverlayButton" 
                    Content="Start Overlay" 
                    Click="StartOverlayButton_Click"
                    Padding="10,5" 
                    Margin="0,0,10,0"
                    Background="#2196F3"
                    Foreground="White"
                    BorderBrush="Transparent"
                    IsEnabled="False"/>
            
            <Button Name="StartAutomationButton" 
                    Content="Start Focus Automation" 
                    Click="StartAutomationButton_Click"
                    Padding="10,5" 
                    Margin="0,0,10,0"
                    Background="#FF9800"
                    Foreground="White"
                    BorderBrush="Transparent"
                    IsEnabled="False"/>
        </StackPanel>
        
        <!-- Test Settings -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Focus Change Interval (seconds):" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <Slider Name="IntervalSlider" 
                    Width="150" 
                    Minimum="1" 
                    Maximum="10" 
                    Value="3" 
                    TickPlacement="BottomRight" 
                    TickFrequency="1"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0"/>
            <TextBlock Name="IntervalText" 
                       Text="3s" 
                       Foreground="White" 
                       VerticalAlignment="Center" 
                       Width="30"/>
        </StackPanel>
        
        <!-- Status -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Status: " 
                       Foreground="White" 
                       FontWeight="Bold"/>
            <TextBlock Name="StatusText" 
                       Text="Ready" 
                       Foreground="LightGreen"/>
        </StackPanel>
        
        <!-- Log Output -->
        <Border Grid.Row="4" 
                Background="Black" 
                BorderBrush="Gray" 
                BorderThickness="1" 
                Padding="5">
            <ScrollViewer Name="LogScrollViewer" 
                          VerticalScrollBarVisibility="Auto">
                <TextBox Name="LogTextBox" 
                         Background="Transparent" 
                         Foreground="White" 
                         FontFamily="Consolas" 
                         FontSize="12" 
                         BorderThickness="0" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>

<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <AssemblyName>OverlayTestHarness</AssemblyName>
    <RootNamespace>OverlayTestHarness</RootNamespace>
    <StartupObject>OverlayTestHarness.TestHarnessApp</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Windows.Extensions" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ED_Inara_Overlay\ED_Inara_Overlay.csproj" />
    <ProjectReference Include="..\Logger\Logger.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="ED_Inara_Overlay.LayoutTests\**\*.cs" />
    <Compile Remove="MinimalTestHarness.cs" />
    <Compile Remove="MainWindow.xaml.cs" />
    <Compile Remove="MockTargetApp\**" />
  </ItemGroup>

</Project>
